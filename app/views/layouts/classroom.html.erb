<html>
<head>
  <%= stylesheet_link_tag 'reset', 'core', 'classroom' %>
</head>
<body class="classroom">
  <div class="header">
    <div class="main menu">
      <% link_to teachings_path, :class => 'logo' do %>
        Homework Bin
      <% end %>
      <ul class="links">
        <li><%= link_to 'Courses', teachings_path %></li>
        <li><%= link_to 'Settings', person_path %>
      </ul>
    </div>
    <% if current_course.present? %>
      <div class="course menu">
        <div class="course-name">
          <%= current_course.name %>
        </div>
        <ul class="course-operations">
          <li>
            <%= link_to 'Assignments', teaching_assignments_path(current_course) %>
          </li>
          <li>
            <%= link_to 'Students', teaching_studiers_path(current_course) %>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="content">
    <%= yield %>
  </div>
</body>
</html>