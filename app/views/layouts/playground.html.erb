<!DOCTYPE html>
<html>
<head>
  <%= yui_stylesheet 'cssreset/reset-min' %>
  <%= stylesheet_link_tag 'layouts/whiteboard', 'shared/fonts', 'shared/form' %>
  <%= controller_stylesheet_tag %>
  <%= javascript_include_tag 'jquery' %>
  <title>
    Homework Bin<%= yield :title %>
  </title>
</head>
<% body do %>
  <div class="header">
    <div class="main menu">
      <% link_to root_path, :class => 'logo' do %>
        Homework Bin
      <% end %>
      <ul class="links">
        <li><%= link_to 'Start a free course', registrations_path %></li>
        <li>|</li>
        <li><%= link_to 'Login', login_path %></li>
      </ul>
    </div>
  </div>
  <div class="content">
    <%= yield %>
  </div>
<% end %>
</html>