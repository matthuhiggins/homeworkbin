<% title 'Password reset' %>

<%= form_for @lost_password do |f| %>
  <div>
    <div><%= f.label :new_password, 'New password' %></div>
    <div><%= f.password_field :new_password %></div>
    <div><%= f.error_message_on :new_password, :prepend_text => 'Password ' %></div>
  </div>
  <div>
    <%= f.submit 'Save password' %>
  </div>
<% end %>

<%= focus 'lost_password_new_password' %>