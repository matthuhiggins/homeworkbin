<% title 'Your courses' %>

<% if current_person.registered_as_teacher && @teaching.empty? %>
  <%= render 'first_course' %>
<% end %>

<% if @teaching.any? %>
  <h2>
    Courses you teach
    <%= link_to 'Start a new course Â»', new_teaching_path %>
  </h2>
  <ul>
    <% @teaching.each do |course| %>
      <li><%= link_to course.name, teaching_path(course) %></li>
    <% end %>
  </ul>
<% end %>

<% if @studying.any? %>
  <h2>Courses you are teaching</h2>
  <ul>
    <% @studying.each do |course| %>
      <li><%= link_to course.name, studying_path(course) %></li>
    <% end %>
  </ul>
<% end %>