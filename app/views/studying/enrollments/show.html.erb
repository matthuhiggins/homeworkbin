<% title 'Course enrollment' %>

<h2>Enroll for <%= @enrollment.course.name %></h2>

<%= form_for @enrollment do |f| %>
  <%= f.hidden_field :accept_enrollment, 'value' => '1' %>

  <% f.fields_for @enrollment.student do |s| %>
    <%= render enrollment_fields_partial(@enrollment), :object => s %>
  <% end %>

  <div class="submit">
    <%= f.submit "Enroll for #{h truncate(@enrollment.course.name, :length => 15)}" %>
  </div>
<% end %>