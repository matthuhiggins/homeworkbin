<div>
  <p><%= new_student.label :full_name, 'Your name' %></p>
  <p><%= new_student.text_field :full_name %></p>
  <p><%= new_student.error_message_on :full_name, :prepend_text => 'Your name ' %></p>
</div>
<div>
  <p><%= new_student.label :email %></p>
  <p><%= new_student.text_field :email %></p>
  <p><%= new_student.error_message_on :email, :prepend_text => 'Email ' %></p>
</div>
<div>
  <p><%= new_student.label :password %></p>
  <p><%= new_student.password_field :password %></p>
  <p><%= new_student.error_message_on :password, :prepend_text => 'Password ' %></p>
</div>
