<div class="course">
  <%= link_to course.name, studying_path(course) %>
  <div>
    <% course.assignments.next.tap do |assignment| %>
      <% if assignment.present? %>
        <%= link_to assignment.name, studying_composition_path(course, assignment) %>
        due <%= relative_assignment_due_date(assignment) %>
      <% end %>
    <% end %>
  </div>
</div>