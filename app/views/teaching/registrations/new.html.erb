<% title 'Start a free course' %>

<% form_for @registration do |f| %>
  <div>
    <div><%= f.label :full_name, 'Your name' %></div>
    <div><%= f.text_field :full_name %></div>
    <div><%= f.error_message_on :full_name, :prepend_text => 'Your name ' %></div>
  </div>
  <div>
    <div><%= f.label :email %></div>
    <div><%= f.text_field :email %></div>
    <div><%= f.error_message_on :email, :prepend_text => 'Email ' %></div>
  </div>
  <div>
    <div><%= f.label :password %></div>
    <div><%= f.password_field :password %></div>
    <div><%= f.error_message_on :password, :prepend_text => 'Password ' %></div>
  </div>
  <div>
    <%= f.submit 'Start your free course' %>
  </div>
<% end %>

<%= focus 'registration_full_name' %>