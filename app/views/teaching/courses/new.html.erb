<% form_for @course, :url => teachings_path do |f| %>
  <div>
    <%= f.label :name, 'Course name' %>
    <%= f.text_field :name %>
    <%= f.error_message_on :name, :prepend_text => 'Course name ' %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.error_message_on :description, :prepend_text => 'Description ' %>
  </div>
  <div>
    <%= f.label :start_date, 'from' %>
    <%= f.text_field :start_date %>
    <%= f.label :end_date, 'to' %>
    <%= f.text_field :end_date %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>